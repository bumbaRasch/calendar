# Environment Configuration Template
# Copy to .env and update values for your environment

# Application Settings
NODE_ENV=development
VITE_APP_NAME="Modern Calendar App"
VITE_APP_VERSION="1.0.0"

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Database Configuration (for future backend integration)
# DATABASE_URL=postgresql://username:password@localhost:5432/calendar_db
# DATABASE_MAX_CONNECTIONS=20

# Authentication (for future implementation)
# VITE_AUTH_PROVIDER=local
# VITE_JWT_SECRET=your_jwt_secret_here
# VITE_SESSION_TIMEOUT=3600

# External Services (for future integrations)
# VITE_GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
# VITE_OUTLOOK_CLIENT_ID=your_outlook_client_id
# VITE_CALDAV_SERVER_URL=https://your-caldav-server.com

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# File Storage (for attachments)
# VITE_STORAGE_PROVIDER=local
# VITE_UPLOAD_MAX_SIZE=10485760
# S3_BUCKET_NAME=calendar-attachments
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your_s3_access_key
# S3_SECRET_KEY=your_s3_secret_key

# Analytics (optional)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_ENABLE_ANALYTICS=true

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_SHOW_ROUTER_DEVTOOLS=true
VITE_SHOW_QUERY_DEVTOOLS=true

# Performance & Optimization
VITE_BUNDLE_ANALYZER=false
VITE_PWA_ENABLED=false

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ERROR_REPORTING=false

# Feature Flags (for gradual rollouts)
VITE_FEATURE_DRAG_DROP=true
VITE_FEATURE_RECURRING_EVENTS=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_THEMES=true

# Timezone & Localization
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_DEFAULT_LOCALE=en-US
VITE_SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Backup & Sync (for future implementation)
# VITE_AUTO_BACKUP=true
# VITE_BACKUP_INTERVAL=3600
# VITE_SYNC_ENABLED=false